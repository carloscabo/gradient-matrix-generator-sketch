{
  "name": "gradient-matrix-generator",
  "version": "0.2.1",
  "description": "Plugin that generates a matrix of gradient combinations from a selection of colors",
  "private": false,
  "keywords": [
    "sketch",
    "gradient",
    "UI Kit",
    "UI"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/carloscabo/gradient-matrix-generator-sketch"
  },
  "bugs": {
    "url": "https://github.com/carloscabo/gradient-matrix-generator-sketch/issues"
  },
  "engines": {
    "sketch": ">=53.0"
  },
  "skpm": {
    "name": "gradient-matrix-generator",
    "manifest": "src/manifest.json",
    "main": "gradient-matrix-generator.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0"
  },
  "author": "CarlosCabo (@putuko) <carloscabo AT gmail DOT com>",
  "license": "MIT"
}
